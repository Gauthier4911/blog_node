<%- include('../../layouts/header'); -%>

    <main class="container mt-5">
        <section class="row">
            <h3 class="text-center">Vos resultats de recherche</h3>
            <% if (articles.docs.length === 0) { %>
              Aucun résultat ne correspont à votre recherche
            <% }else { %>
                <% articles.docs.forEach(function (article) { %>
                        <div class="col-lg-6">
                            <div class="card mb-4">
                                <img class="card-img-top" src="<%= '/imageArticles/'+article.image %>" alt="..." />
                                <div class="card-body">
                                    <div class="small text-muted"><%= article.formatter %></div>
                                    <h2 class="card-title"><%= article.name %></h2>
                                    <p class="card-text"><%= article.desc.length >198 ? article.desc.substring(0,198)+'...' : article.desc %></p>
                                    <p>
                                        publié par  <strong><%= article.user.name %></strong>
                                    </p>
                                    <a class="btn btn-primary" href="/article/<%= article._id %>">Read more →</a>
                                </div>
                            </div>
                        </div>
                <% }); %>
           <% } %>
        </section>
    </main>

<%- include('../../layouts/footer'); -%>
