<%- include('../layouts/header'); -%>
<%- include('../component/baniere'); -%>
<main class="container">
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <img class="card-img-top" src="<%= '/imageArticles/'+articles.docs[0].image %>" alt="..." />
                <div class="card-body">
                    <div class="small text-muted"><%= articles.docs[0].formatter  %></div>
                    <h2 class="card-title"><%= articles.docs[0].name %></h2>
                    <p class="card-text"><%= articles.docs[0].desc.length >198 ? articles.docs[0].desc.substring(0,198)+'...' : articles.docs[0].desc %></p>
                    <p>
                        publié par  <strong><%= articles.docs[0].user.name %></strong>
                    </p>
                    <a class="btn btn-primary" href="/article/<%= articles.docs[0]._id %>">Read more →</a>
                </div>
            </div>
            <div class="row">
                <% articles.docs.forEach(function (article) { %>
                    <% if (article.name !== articles.docs[0].name) {%>
                            <div class="col-lg-6">
                                <div class="card mb-4">
                                    <img class="card-img-top" src="<%= '/imageArticles/'+article.image %>" alt="..." />
                                    <div class="card-body">
                                        <div class="small text-muted"><%= article.formatter %></div>
                                        <h2 class="card-title"><%= article.name %></h2>
                                        <p class="card-text"><%= article.desc.length >198 ? article.desc.substring(0,198)+'...' : article.desc %></p>
                                        <p>
                                            publié par  <strong><%= article.user.name %></strong>
                                        </p>
                                        <a class="btn btn-primary" href="/article/<%= article._id %>">Read more →</a>
                                    </div>
                                </div>
                            </div>
                    <% } %>
                <% }); %>
                    <nav aria-label="Pagination">
                        <hr class="my-0" />
                        <ul class="pagination justify-content-center my-4">
                                <% if (articles.hasPrevPage) { %>
                                    <li class="page-item "><a class="page-link" href="/?page=<%= articles.page - 1%>">Newer</a></li>
                                <% } %>
                                    <% for (let i = 1; i <= articles.totalPages; i++) { %>

                                        <li class="page-item <%= i === articles.page ? 'active' : ''%>"><a class="page-link" href="/?page=<%= i %>"><%= i %></a></li>

                                    <% } %>
                                <% if (articles.hasNextPage) { %>
                                    <li class="page-item"><a class="page-link" href="/?page=<%= articles.page + 1%>">Older</a></li>
                                <% } %>
                        </ul>
                    </nav>
            </div>
        </div>
        <div class="col-lg-4">
            <!-- Search widget-->
            <div class="card mb-4">
                <div class="card-header">Search</div>
                <div class="card-body">
                    <form action="/article/search" method="get">
                        <div class="input-group">
                            <input class="form-control" type="search" name="search" placeholder="Enter search term..." aria-label="Enter search term..." aria-describedby="button-search" />
                            <button class="btn btn-primary"  id="button-search" type="submit">Go!</button>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Categories widget-->
            <div class="card mb-4">
                <div class="card-header">Categories</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <ul class="list-unstyled mb-0">
                                <li><a href="#!">Web Design</a></li>
                                <li><a href="#!">HTML</a></li>
                                <li><a href="#!">Freebies</a></li>
                            </ul>
                        </div>
                        <div class="col-sm-6">
                            <ul class="list-unstyled mb-0">
                                <li><a href="#!">JavaScript</a></li>
                                <li><a href="#!">CSS</a></li>
                                <li><a href="#!">Tutorials</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Side widget-->
            <div class="card mb-4">
                <div class="card-header">Side Widget</div>
                <div class="card-body">You can put anything you want inside of these side widgets. They are easy to use, and feature the Bootstrap 5 card component!</div>
            </div>
        </div>
    </div>
</main>

<%- include('../layouts/footer'); -%>